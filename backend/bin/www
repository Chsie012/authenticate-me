#!/usr/bin/env node

// Load environment variables
require('dotenv').config();

const app = require('../app');
const db = require('../db/models');

const PORT = process.env.PORT || 4000; // Default to 4000 if not set

// Check the database connection before starting the app
(async () => {
  try {
    await db.sequelize.authenticate();
    console.log('âœ… Database connection success! Sequelize is ready to use...');

    // Sync models if needed (optional)
    // await db.sequelize.sync();

    // Start the server
    app.listen(PORT, () => console.log(`ğŸš€ Server listening on port ${PORT}...`));
  } catch (err) {
    console.error('âŒ Database connection failure:', err);
    process.exit(1); // Exit process with failure code
  }
})();
